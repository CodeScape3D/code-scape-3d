#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

branch="$(git symbolic-ref --short HEAD)"

# ProtecciÃ³n de ramas principales
echo "ğŸ” Verificando rama actual: $branch"
if [ "$branch" = "main" ] || [ "$branch" = "dev" ]; then
  echo "ğŸš« Push directo a la rama $branch no permitido. Crea una rama diferente y genera un Pull Request."
  exit 1
fi

# Ejecutar formateo global
printf '\nâš™ï¸  Ejecutando npm run format...\n'
npm run format --silent

# AÃ±adir cambios formateados
git add -u

# Si hay archivos en staging (dif entre index y HEAD)
if ! git diff --cached --quiet; then
  printf '\nâœ¨ Se detectaron archivos formateados, creando commit "format"...\n'
  git commit -m "format" --no-verify
  echo "â„¹ï¸  Se ha creado un commit de formato. Vuelve a ejecutar 'git push' para enviar los cambios."
  exit 1
fi

# Si no hubo cambios, continuar push
exit 0 